{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "build/",
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true
  },
  "include": [
      "src/**/*",
      "examples/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}